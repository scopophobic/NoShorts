{
  "manifest_version": 3,
  "name": "noShort",
  "version": "1.0",
  "description": "i hate shorts, so removing it",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": "image/blocked.png"
  },
  "icons": {
    "48": "image/blocked.png"
  }
}


